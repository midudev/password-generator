---
import Layout from '@layout'
import PasswordGenerator from '@components/JaavierR/PasswordGenerator'
---

<Layout title='JaavierR hacktoberfest 2022 entry'>
	<main class='h-screen flex flex-col items-center justify-center min-h-[50rem] px-4 sm:px-0'>
		<div class='w-full px-8 mt-20 max-w-6xl mx-auto'>
			<a
				href='/'
				class='text-white group bg-neutral-500/10 hover:bg-neutral-500/20 rounded-lg inline-flex p-2 items-center justify-center'
			>
				<svg
					xmlns='http://www.w3.org/2000/svg'
					fill='none'
					viewBox='0 0 24 24'
					stroke-width='1.5'
					stroke='currentColor'
					class='w-6 h-6 group-hover:-translate-x-0.5 transition duration-200'
				>
					<path
						stroke-linecap='round'
						stroke-linejoin='round'
						d='M10.5 19.5L3 12m0 0l7.5-7.5M3 12h18'></path>
				</svg>
			</a>
		</div>

		<div class='h-full flex flex-col items-center justify-center -mt-40'>
			<img class='w-72 h-auto mx-auto mb-8' src='/logo.svg' alt='Hacktoberfest logo' />
			<PasswordGenerator client:only='react' />
			<div class='text-white mt-6 font-semibold text-sm font-mono'>
				Made with <span class='text-red-500'>‚ù§</span> by <a
					href='https://github.com/JaavierR'
					target='_blank'
					class='text-pink-400'>JaavierR</a
				>
			</div>
		</div>
	</main>
</Layout>

