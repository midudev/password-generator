---
import Checkboxes from '@components/fredoist/Checkboxes.svelte'
import CopyButton from '@components/fredoist/CopyButton.svelte'
import Layout from '@components/fredoist/Layout.astro'
import PasswordHistory from '@components/fredoist/PasswordHistory.svelte'
import PasswordInput from '@components/fredoist/PasswordInput.svelte'
import Slider from '@components/fredoist/Slider.svelte'
---

<Layout title='Cyberpunk Password Generator'>
	<div class='container max-auto'>
		<main role='main' class='px-5 py-12'>
			<h1
				class='text-4xl font-bold leading-none tracking-widest max-w-sm uppercase text-[#f8ef00] mb-8'
			>
				Password Generator
			</h1>
			<PasswordInput client:load />
			<CopyButton client:load />
			<Slider client:load />
			<Checkboxes client:load />
			<PasswordHistory client:load />
		</main>
	</div>
</Layout>
